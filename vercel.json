{
  "buildCommand": "pip install -r requirements.txt && npm install --prefix client && npm run build --prefix client",
  "outputDirectory": "client/dist",
  "functions": {
    "api/app.py": {
      "memory": 3008,
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/app.py" },
    { "source": "/(.*)", "destination": "/client/dist/" }
  ]
}
